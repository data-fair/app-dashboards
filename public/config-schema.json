{
  "type": "object",
  "properties": {
    "datasets": {
      "type": "array",
      "items": [
        {
          "title": "Source des valeurs pour les filtres",
          "type": "object",
          "x-fromUrl": "api/v1/datasets?status=&q={q}&select=id,title,schema,timePeriod,bbox&owner={context.owner.type}:{context.owner.id}",
          "x-itemsProp": "results",
          "x-itemTitle": "title",
          "x-itemKey": "href",
          "properties": {
            "href": {
              "type": "string"
            },
            "title": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "schema": {
              "type": "array"
            },
            "timePeriod": {
              "type": "object"
            },
            "bbox": {
              "type": "array"
            },
            "finalizedAt": {
              "type": "string"
            }
          }
        }
      ]
    },
    "conceptFilters": {
      "type": "array",
      "title": "Filtres du tableau de bord",
      "items": {
        "type": "object",
        "required": ["labelField"],
        "properties": {
          "labelField": {
            "title": "Colonne de libellé du filtre",
            "type": "object",
            "x-fromUrl": "{datasets.0.href}/schema?calculated=false&separator=false",
            "x-itemTitle": "label",
            "x-itemKey": "key",
            "properties": {
              "key": { "type": "string" },
              "label": { "type": "string" }
            }
          },
          "concepts": {
            "type": "array",
            "x-fromUrl": "{datasets.0.href}/schema?calculated=false&separator=false&concept=true",
            "x-itemKey": "key",
            "x-itemTitle": "label",
            "items": {
              "title": "Colonnes pour les valeurs du filtre",
              "type": "object",
              "properties": {
                "key": { "type": "string" },
                "label": { "type": "string" },
                "x-concept": { "type": "object" }
              }
            }
          },
          "forceOneValue": {
            "title": "Toujours filtrer par une valeur",
            "type": "boolean",
            "default": false
          },
          "startValue": {
            "type": "string",
            "title": "Valeur initiale",
            "x-fromUrl": "{datasets.0.href}/values/{parent.value.labelField.key}?q={q}&q_mode=complete&size=100&stringify=true",
            "x-if": "parent.value.forceOneValue"
          },
          "showAllValues": {
            "title": "Garder toutes les valeurs dans la liste",
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "periodFilter": {
      "title": "Ajouter un filtre sur la période",
      "type": "boolean",
      "default": false
    },
    "addressFilter": {
      "title": "Ajouter un filtre par adresse",
      "type": "boolean",
      "default": false
    },
    "title": {
      "type": "string",
      "title": "Titre"
    },
    "description": {
      "type": "string",
      "title": "Introduction",
      "x-display": "textarea"
    },
    "sectionsGroup": {
      "title": "Rendu des sections",
      "type": "string",
      "oneOf": [
        {
          "const": "accordion",
          "title": "En accordéon"
        },
        {
          "const": "tabs-tab",
          "title": "Dans des onglets"
        },
        {
          "const": "tabs-button",
          "title": "Dans des onglets (sélection par boutton)"
        },
        {
          "const": "flow",
          "title": "Les unes à la suite des autres"
        }
      ],
      "default": "accordion"
    },
    "sections": {
      "title": "Sections",
      "type": "array",
      "x-options": { "editMode": "inline" },
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "title": "Libellé" },
          "icon": {
            "title": "Icône",
            "description": "Il est possible de consulter plus facilement la liste des icones disponibles sur <a href=\"https://materialdesignicons.com\" target=\"_blank\">ce site</a>.",
            "type": "object",
            "x-fromUrl": "https://koumoul.com/data-fair/api/v1/datasets/icons-mdi/lines?q={q}&size=10000",
            "x-itemKey": "name",
            "x-itemTitle": "name",
            "x-itemIcon": "svg",
            "x-itemsProp": "results",
            "properties": {
              "name": {
                "type": "string"
              },
              "svg": {
                "type": "string"
              }
            }
          },
          "rows": {
            "title": "Lignes",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "height": {
                  "title": "Hauteur (px)",
                  "description": "Mettez une valeur négative pour un redimensionnement automatique",
                  "type": "integer",
                  "default": 400
                },
                "elements": {
                  "title": "Éléments",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": { "type": "string", "title": "Titre" },
                      "width": {
                        "title": "Largeur",
                        "type": "integer",
                        "oneOf": [
                          {
                            "const": 1,
                            "title": "Fin"
                          },
                          {
                            "const": 2,
                            "title": "Moyen"
                          },
                          {
                            "const": 3,
                            "title": "Large"
                          }
                        ],
                        "default": 2
                      }
                    },
                    "oneOf": [
                      {
                        "$ref": "#/definitions/table"
                      },
                      {
                        "$ref": "#/definitions/application"
                      },
                      {
                        "$ref": "#/definitions/text"
                      },
                      {
                        "$ref": "#/definitions/column"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "table": {
      "title": "Prévisualisation table",
      "properties": {
        "type": { "const": "tablePreview", "title": "Type de l'élément" },
        "valueMandatory": {
          "title": "Nécessite une valeur dans le filtre",
          "type": "boolean",
          "default": false
        },
        "dataset": {
          "type": "object",
          "x-fromUrl": "api/v1/datasets?q={q}&{context.datasetFilter}&select=id,title,schema",
          "x-itemKey": "id",
          "x-itemTitle": "title",
          "x-itemsProp": "results",
          "properties": {
            "id": { "type": "string" },
            "title": { "type": "string" },
            "href": { "type": "string" },
            "schema": { "type": "array" }
          }
        },
        "display": {
          "type": "string",
          "oneOf": [
            {
              "const": "table",
              "title": "Tableau"
            },
            {
              "const": "table-dense",
              "title": "Tableau dense"
            },
            {
              "const": "list",
              "title": "Vignettes"
            }
          ],
          "default": "table",
          "title": "Affichage"
        },
        "noInteractions": {
          "title": "Désactiver les interactions",
          "type": "boolean",
          "default": false
        },
        "fields": {
          "title": "Champs à afficher",
          "description": "Si vide, tous les champs seront affichés",
          "type": "array",
          "x-fromUrl": "{parent.value.dataset.href}/schema?calculated=false",
          "x-itemTitle": "label",
          "x-itemKey": "key",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "application": {
      "title": "Visualisation",
      "properties": {
        "type": { "const": "application", "title": "Type de l'élément" },
        "valueMandatory": {
          "title": "Nécessite une valeur dans le filtre",
          "type": "boolean",
          "default": false
        },
        "application": {
          "type": "object",
          "x-fromUrl": "api/v1/applications?q={q}&{context.datasetFilter}&filterConcepts=true&select=id,title,baseApp",
          "x-itemKey": "id",
          "x-itemTitle": "title",
          "x-itemsProp": "results",
          "properties": {
            "id": { "type": "string" },
            "title": { "type": "string" },
            "baseApp": { "type": "object" }
          }
        }
      }
    },
    "text": {
      "title": "Texte",
      "properties": {
        "type": { "const": "text", "title": "Type de l'élément" },
        "content": {
          "type": "string",
          "x-display": "textarea",
          "title": "Contenu"
        }
      }
    },
    "column": {
      "title": "Colonne",
      "properties": {
        "type": { "const": "column", "title": "Type de l'élément" },
        "elements": {
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "$ref": "#/definitions/table"
              },
              {
                "$ref": "#/definitions/application"
              },
              {
                "$ref": "#/definitions/text"
              }
            ]
          }
        }
      }
    }
  }
}
