{
  "type": "object",
  "properties": {
    "datasets": {
      "type": "array",
      "items": [{
        "title": "Source des valeurs pour le filtre commun",
        "type": "object",
        "x-fromUrl": "api/v1/datasets?status=finalized&q={q}&select=id,title&owner={context.owner.type}:{context.owner.id}",
        "x-itemsProp": "results",
        "x-itemTitle": "title",
        "x-itemKey": "href",
        "properties": {
          "href": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        }
      }]
    },
    "labelField": {
      "title": "Colonne de libellé pour le filtre commun",
      "type": "string",
      "x-fromUrl": "{datasets.0.href}/schema?calculated=false&separator=false",
      "x-itemTitle": "label",
      "x-itemKey": "key"
    },
    "forceOneValue":{
      "title": "Toujours filtrer par une valeur",
      "type": "boolean",
      "default": false
    },
    "startValue": {
      "type": "string",
      "title": "Valeur initiale",
      "x-fromUrl": "{datasets.0.href}/values/{labelField}?q={q}&q_mode=complete&size=100&stringify=true",
      "x-if": "forceOneValue"
    },
    "showAllValues":{
      "title": "Garder toutes les valeurs dans la liste",
      "type": "boolean",
      "default": false
    },
    "title": {
      "type": "string",
      "title": "Titre"
    },
    "description": {
      "type": "string",
      "title": "Introduction",
      "x-display": "textarea"
    },
    "sectionsGroup": {
      "title": "Rendu des sections",
      "type": "string",
      "oneOf": [{
          "const": "flow",
          "title": "A la suite les unes des autres"
        },
        {
          "const": "tabs",
          "title": "Dans des onglets"
        }
      ],
      "default": "flow"
    },
    "sections": {
      "title": "Sections",
      "type": "array",
      "x-options": {"editMode": "inline"},
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "icon": {
            "title": "Icône",
            "description": "Il est possible de consulter plus facilement la liste des icones disponibles sur <a href=\"https://materialdesignicons.com\" target=\"_blank\">ce site</a>.",
            "type": "object",
            "x-fromUrl": "https://koumoul.com/data-fair/api/v1/datasets/icons-mdi/lines?q={q}&size=10000",
            "x-itemKey": "name",
            "x-itemTitle": "name",
            "x-itemIcon": "svg",
            "x-itemsProp": "results",
            "properties": {
              "name": {
                "type": "string"
              },
              "svg": {
                "type": "string"
              }
            }
          },
          "description": { "type": "string", "x-display": "textarea" },
          "height": {
            "title": "Hauteur (px)",
            "description": "Mettez une valeur négative pour un redimensionnement automatique",
            "type": "integer",
            "default": 400
          },
          "elements": {
            "title": "Éléments",
            "type": "array",
            "items": {
              "type": "object",
              "properties":{
                "title": { "type": "string", "title": "Titre" },
                "width": {
                  "title": "Largeur",
                  "type": "string",
                  "oneOf": [{
                      "const": "small",
                      "title": "Fin"
                    },
                    {
                      "const": "medium",
                      "title": "Moyen"
                    },
                    {
                      "const": "large",
                      "title": "Large"
                    },
                    {
                      "const": "full",
                      "title": "Toute la largeur"
                    }
                  ],
                  "default": "medium"
                }
              },
              "oneOf": [{
                "title": "Prévisualisation table",
                "properties": {
                  "type": { "const": "tablePreview", "title": "Type de l'élément" },
                  "concept": {
                    "title": "Colonne du filtre commun",
                    "x-fromUrl": "{datasets.0.href}/schema?calculated=false&separator=false&concept=true",
                    "x-itemKey": "id",
                    "x-itemTitle": "label",
                    "type": "object",
                    "properties": {
                      "key": {"type": "string"},
                      "label": {"type": "string"},
                      "x-concept": {"type": "object"}
                    }
                  },
                  "valueMandatory": {
                    "title": "Nécessite une valeur dans le filtre",
                    "type": "boolean",
                    "default": true
                  },
                  "dataset": {
                    "type": "object",
                    "x-fromUrl": "api/v1/datasets?q={q}&short-concept={parent.value.concept['x-concept'].id}&{context.datasetFilter}&select=id,title",
                    "x-itemKey": "id",
                    "x-itemTitle": "title",
                    "x-itemsProp": "results",
                    "properties": {
                      "id": {"type": "string"},
                      "title": {"type": "string"}
                    }
                  },
                  "display": {
                    "type": "string",
                     "oneOf": [{
                        "const": "table",
                        "title": "Tableau"
                      },
                      {
                        "const": "table-dense",
                        "title": "Tableau dense"
                      },
                      {
                        "const": "list",
                        "title": "Vignettes"
                      }
                    ],
                    "default": "table",
                    "title": "Affichage"
                  }
                }
              }, {
                "title": "Visualisation",
                "properties": {
                  "type": { "const": "application", "title": "Type de l'élément" },
                  "concept": {
                    "title": "Colonne du filtre commun",
                    "x-fromUrl": "{datasets.0.href}/schema?calculated=false&separator=false&concept=true",
                    "x-itemKey": "id",
                    "x-itemTitle": "label",
                    "type": "object",
                    "properties": {
                      "key": {"type": "string"},
                      "label": {"type": "string"},
                      "x-concept": {"type": "object"}
                    }
                  },
                  "valueMandatory": {
                    "title": "Nécessite une valeur dans le filtre",
                    "type": "boolean",
                    "default": true
                  },
                  "application": {
                    "type": "object",
                    "x-fromUrl": "api/v1/applications?q={q}&{context.datasetFilter}&filterConcepts=true&select=id,title,baseApp",
                    "x-itemKey": "id",
                    "x-itemTitle": "title",
                    "x-itemsProp": "results",
                    "properties": {
                      "id": {"type": "string"},
                      "title": {"type": "string"},
                      "baseApp":{"type": "object"}
                    }
                  }
                }
              }, {
                "title": "Texte",
                "properties": {
                  "type": { "const": "text", "title": "Type de l'élément" },
                  "content": { "type": "string", "x-display": "textarea", "title": "Contenu" }
                }
              }]
            }
          }
        }
      }
    }
  }
}
